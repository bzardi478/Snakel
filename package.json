{
  "name": "snake-multiplayer",
  "version": "1.0.0",
  "description": "Real-time multiplayer Snake game with WebSockets",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm install && npm run build-client",
    "build-client": "esbuild public/client.js --bundle --minify --outfile=public/dist/client.min.js",
    "predeploy": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "socket.io": "^4.8.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "esbuild": "^0.20.2",
    "nodemon": "^3.1.0"
  },
  "keywords": [
    "websocket",
    "multiplayer",
    "game",
    "snake",
    "realtime"
  ],
  "author": "Your Name",
  "license": "MIT",
  "browserslist": [
    "defaults"
  ]
}